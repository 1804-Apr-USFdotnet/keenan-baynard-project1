                    </tbody>
                </table>
            </div>
            <div class="col-sm-4">
                <b>@Model.ElementAt(i).Name</b>
                <table>
                    <tbody>
                        <tr>@Model.ElementAt(i).City,  @Model.ElementAt(i++).State</tr>
                    </tbody>
                </table>
            </div>
            <div class="col-sm-4">
                <b>@Model.ElementAt(i).Name</b>
                <table>
                    <tbody>
                        <tr>@Model.ElementAt(i).City,  @Model.ElementAt(i++).State</tr>
                    </tbody>
                </table>
            </div>
        </div>
    }


</body>
</html>
